<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <header>
        <h1>Enhanced Form Application</h1>
        <p>Secure form submissions with user authentication</p>
      </header>

      <nav class="nav-links">
        <% if (typeof user !== 'undefined' && user) { %>
        <a href="/dashboard" class="btn">Dashboard</a>
        <a href="/auth/logout" class="btn btn-secondary">Logout</a>
        <% } else { %>
        <a href="/auth/login" class="btn">Login</a>
        <a href="/auth/signup" class="btn btn-secondary">Sign Up</a>
        <% } %>
      </nav>

      <main>
        <% if (errors && errors.length) { %>
        <div class="errors">
          <ul>
            <% errors.forEach(err => { %>
            <li><%= err %></li>
            <% }) %>
          </ul>
        </div>
        <% } %>

        <form action="/submit" method="POST" class="form-card">
          <h2>Submit Your Message</h2>

          <div class="form-group">
            <label for="name">Name:</label>
            <input
              type="text"
              id="name"
              name="name"
              value="<%= values.name || '' %>"
              placeholder="Your full name"
              required
            />
          </div>

          <div class="form-group">
            <label for="email">Email:</label>
            <input
              type="email"
              id="email"
              name="email"
              value="<%= values.email || '' %>"
              placeholder="your@email.com"
              required
            />
          </div>

          <div class="form-group">
            <label for="message">Message:</label>
            <textarea
              id="message"
              name="message"
              rows="5"
              placeholder="Enter your message here..."
              required
            >
<%= values.message || '' %></textarea
            >
          </div>

          <button type="submit" class="btn btn-primary">Submit Message</button>
        </form>

        <% if (typeof user !== 'undefined' && user) { %>
        <section class="submissions-section">
          <h3>Your Recent Submissions</h3>
          <div id="submissionsList">Loading...</div>
        </section>
        <% } %>
      </main>
    </div>

    <script src="/js/form-validation.js"></script>
    <% if (typeof user !== 'undefined' && user) { %>
    <script src="/js/api.js"></script>
    <% } %>
  </body>
</html>
